            M407.466667 620.8c-10.666667 0-19.2-6.4-23.466667-14.933333-4.266667-8.533333-2.133333-19.2 6.4-27.733334L896 70.4c10.666667-10.666667 25.6-10.666667 34.133333 0 10.666667 10.666667 10.666667 25.6 0 34.133333L424.533333 612.266667c-4.266667 6.4-10.666667 8.533333-17.066666 8.533333z m0 0
        </Geometry>
    </Window.Resources>
    <Window.Style>
        <Style TargetType="{x:Type Window}">
            <Setter Property="FontFamily" Value="Microsoft YaHei" />
            <Setter Property="FontWeight" Value="ExtraLight" />

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Window}">
                        <Border Background="Transparent">
                            <Grid>
                                <Border
                                    Grid.Row="0"
                                    Width="350"
                                    Height="500"
                                    BorderBrush="#FFF"
                                    BorderThickness="1"
                                    CornerRadius="8">

                                    <Border.Background>
                                        <ImageBrush
                                            ImageSource="./Assets/Img/login2.jpg"
                                            Opacity="0.5"
                                            Stretch="UniformToFill" />
                                    </Border.Background>
                                    <Border.Effect>
                                        <BlurEffect Radius="3" />
                                    </Border.Effect>

                                </Border>
                                <Grid>
                                    <Button
                                        Width="50"
                                        Height="40"
                                        Margin="30,10"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Top"
                                        Click="CloseWindow_Click"
                                        Style="{DynamicResource WindowMaxButtonStyle}">
                                        <Path
                                            Width="10"
                                            Height="10"
                                            Data="{StaticResource CloseIco}"
                                            Fill="Black"
                                            Stretch="Fill" />

                                    </Button>
                                    <ContentPresenter />
                                </Grid>


                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Style>
    <Grid Margin="40,50,40,10">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <hc:Gravatar Id="User2" />
        </Grid>
        <StackPanel
            Grid.Row="1"
            Margin="10,40,10,10"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <TextBlock
                Margin="10"
                FontSize="12"
                Foreground="#FFF">
                账户：
            </TextBlock>
            <Border
                Width="250"
                Height="30"
                Background="Transparent"
                BorderBrush="#FFF"
                BorderThickness="1"
                CornerRadius="15">
                <TextBox
                    Width="230"
                    Height="30"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    FontSize="20"
                    Foreground="#FFF"
                    Text="{Binding UserName}" />
            </Border>
        </StackPanel>
        <StackPanel
            Grid.Row="2"
            Margin="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <TextBlock
                Margin="10"
                FontSize="12"
                Foreground="#FFF">
                密码：
            </TextBlock>
            <Border
                Width="250"
                Height="30"
                Background="Transparent"
                BorderBrush="#FFF"
                BorderThickness="1"
                CornerRadius="15">
                <PasswordBox
                    Width="230"
                    Height="30"
                    local:LoginPasswordBoxHelper.IsPasswordBindingEnable="True"
                    local:LoginPasswordBoxHelper.Password="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    FontSize="20"
                    Foreground="#FFF"
                    Style="{x:Null}" />
            </Border>
        </StackPanel>

        <StackPanel Grid.Row="3" Margin="0,40">
            <Button
                Width="250"
                Height="30"
                hc:IconElement.Geometry="{StaticResource loginIcon}"
                Background="{DynamicResource Primary.Brush}"
                Command="{Binding LoginCommand}"
                CommandParameter="{Binding ElementName=loginWindow}"
                FontSize="15"
                Style="{StaticResource ButtonPrimary}">
                登 录
            </Button>
        </StackPanel>

        <Grid Grid.Row="4">
            <TextBlock
                Margin="35,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Foreground="#FFF">
                <Hyperlink
                    Foreground="#FFF"
                    NavigateUri="https://github.com/xioa-cn/WPF-Admin"
                    RequestNavigate="Hyperlink_RequestNavigate">
                    忘记密码
                </Hyperlink>
            </TextBlock>

            <TextBlock
                Margin="38,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Foreground="#FFF">
                <Hyperlink
                    Foreground="#FFF"
                    NavigateUri="https://github.com/xioa-cn/WPF-Admin"
                    RequestNavigate="Hyperlink_RequestNavigate">
                    立即注册
                </Hyperlink>

            </TextBlock>
        </Grid>

    </Grid>
</Window>