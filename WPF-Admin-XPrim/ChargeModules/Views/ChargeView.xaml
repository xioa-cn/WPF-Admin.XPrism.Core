<Page
    x:Class="ChargeModules.Views.ChargeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ChargeModules.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ChargeView"
    mc:Ignorable="d">

    <Border Background="Black" CornerRadius="8">
        <Viewbox
            Width="200"
            Height="200"
            Stretch="Uniform">
            <Grid>
                <!--  电池外壳  -->
                <Rectangle
                    x:Name="BatteryOutline"
                    Width="100"
                    Height="180"
                    Fill="Transparent"
                    RadiusX="10"
                    RadiusY="10"
                    Stroke="#FF4CAF50"
                    StrokeThickness="5" />

                <!--  电池顶部凸起部分  -->
                <Rectangle
                    Width="30"
                    Height="10"
                    Margin="0,-5,0,0"
                    VerticalAlignment="Top"
                    Fill="#FF4CAF50" />

                <!--  电池充电动画部分  -->
                <Rectangle
                    x:Name="BatteryLevel"
                    Width="80"
                    Height="0"
                    Margin="0,0,0,10"
                    VerticalAlignment="Bottom"
                    Fill="#FF4CAF50">
                    <Rectangle.Triggers>
                        <EventTrigger RoutedEvent="Rectangle.Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever">
                                    <!--  电池充电高度动画  -->
                                    <DoubleAnimation
                                        AutoReverse="True"
                                        Storyboard.TargetName="BatteryLevel"
                                        Storyboard.TargetProperty="Height"
                                        From="0"
                                        To="160"
                                        Duration="0:0:2" />

                                    <!--  电池充电颜色动画  -->
                                    <ColorAnimation
                                        AutoReverse="True"
                                        Storyboard.TargetName="BatteryLevel"
                                        Storyboard.TargetProperty="(Rectangle.Fill).(SolidColorBrush.Color)"
                                        From="#FF4CAF50"
                                        To="#FFCDDC39"
                                        Duration="0:0:2" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Rectangle.Triggers>
                </Rectangle>

                <!--  闪电图标  -->
                <Path
                    Margin="10"
                    VerticalAlignment="Center"
                    Data="M30,20 L50,20 L40,50 L60,50 L30,90 L40,55 L20,55 Z"
                    Fill="White"
                    Opacity="0.8">
                    <Path.Triggers>
                        <EventTrigger RoutedEvent="Path.Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever">
                                    <DoubleAnimation
                                        AutoReverse="True"
                                        Storyboard.TargetProperty="Opacity"
                                        From="0.8"
                                        To="0.2"
                                        Duration="0:0:1" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Path.Triggers>
                </Path>

                <!--  充电文字  -->
                <TextBlock
                    Margin="0,0,0,-30"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    FontSize="16"
                    Foreground="White"
                    Text="充电中...">
                    <TextBlock.Triggers>
                        <EventTrigger RoutedEvent="TextBlock.Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever">
                                    <DoubleAnimation
                                        AutoReverse="True"
                                        Storyboard.TargetProperty="Opacity"
                                        From="1"
                                        To="0.3"
                                        Duration="0:0:1" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </TextBlock.Triggers>
                </TextBlock>
            </Grid>
        </Viewbox>
    </Border>
</Page>
