<xPrism:XPrismWindow
    x:Class="WPFAdmin.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:WPFAdmin.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:nav="clr-namespace:XPrism.Core.Navigations;assembly=XPrism.Core"
    xmlns:xPrism="clr-namespace:XPrism.Core.DataContextWindow;assembly=XPrism.Core"
    Title="Admin.XPrism.Core"
    Width="1200"
    Height="775"
    AllowsTransparency="True"
    Background="{x:Null}"
    ResizeMode="CanResizeWithGrip"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="50" GlassFrameThickness="1" />
    </WindowChrome.WindowChrome>
    <Window.Style>
        <Style TargetType="{x:Type Window}">
            <Setter Property="FontFamily" Value="Microsoft YaHei" />
            <Setter Property="FontWeight" Value="ExtraLight" />
            <Setter Property="MaxHeight" Value="{Binding Source={x:Static SystemParameters.WorkArea}, Path=Height, Converter={StaticResource ConvertToDouble}}" />
            <Setter Property="MaxWidth" Value="{Binding Source={x:Static SystemParameters.WorkArea}, Path=Width, Converter={StaticResource ConvertToDouble}}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Window}">
                        <hc:Watermark Mark="Xioa.Admin">
                            <Border Background="Transparent">
                                <Border
                                    x:Name="MainBorder"
                                    Margin="5"
                                    Background="{DynamicResource Background.Brush}"
                                    BorderBrush="{DynamicResource Border.Brush}"
                                    BorderThickness="0.4"
                                    CornerRadius="8">
                                    <Border.Effect>
                                        <DropShadowEffect
                                            BlurRadius="5"
                                            Direction="0"
                                            Opacity="0.3"
                                            ShadowDepth="0"
                                            Color="Gray" />
                                    </Border.Effect>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto" />
                                            <RowDefinition Height="*" />

                                        </Grid.RowDefinitions>

                                        <WrapPanel
                                            Grid.Row="0"
                                            Margin="10,0,10,0"
                                            VerticalAlignment="Center">
                                            <!--<Image
                                            Width="32"
                                            Height="32"
                                            Source="{StaticResource logo}" />-->
                                            <Path
                                                Width="22"
                                                Height="22"
                                                Data="{StaticResource logo1}"
                                                Fill="{DynamicResource Primary.Brush}"
                                                Stretch="Uniform" />

                                            <TextBlock
                                                Margin="10,0,0,0"
                                                VerticalAlignment="Center"
                                                FontWeight="Bold"
                                                Foreground="{DynamicResource Text.Primary.Brush}"
                                                Text="{TemplateBinding Title}" />
                                        </WrapPanel>

                                        <WrapPanel
                                            Grid.Row="0"
                                            Margin="10,0,10,0"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Stretch">
                                            <Button
                                                Width="30"
                                                Height="30"
                                                VerticalAlignment="Stretch"
                                                Click="MiniSize_Click"
                                                Style="{DynamicResource WindowMaxButtonStyle}">
                                                <Path
                                                    Width="10"
                                                    Height="2"
                                                    Data="{StaticResource MiniIco}"
                                                    Fill="Black"
                                                    Stretch="Fill" />

                                            </Button>

                                            <Button
                                                Width="30"
                                                Height="30"
                                                VerticalAlignment="Stretch"
                                                Click="MaxSize_Click"
                                                Style="{DynamicResource WindowMaxButtonStyle}">
                                                <Path
                                                    Data="{StaticResource MaxIco}"
                                                    Fill="Black"
                                                    Stretch="Fill" />
                                            </Button>

                                            <Button
                                                Width="30"
                                                Height="30"
                                                VerticalAlignment="Stretch"
                                                Click="Close_Click"
                                                Style="{DynamicResource WindowCloseButtonStyle}">
                                                <Path
                                                    Data="{StaticResource CloseIco}"
                                                    Fill="Black"
                                                    Stretch="Fill" />
                                            </Button>
                                        </WrapPanel>

                                        <Grid Grid.Row="1">
                                            <ContentPresenter />
                                        </Grid>


                                    </Grid>
                                </Border>
                            </Border>
                        </hc:Watermark>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Style>
    <AdornerDecorator>
        <Grid Margin="5">
            <ContentControl nav:RegionManagerProperty.RegionName="MainRegion" />
        </Grid>
    </AdornerDecorator>
</xPrism:XPrismWindow>