<Page
    x:Class="PersonalityComponentModules.Views.ParticleClock"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PersonalityComponentModules.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ParticleClock"
    mc:Ignorable="d">
    <Grid>
        <!--  时钟容器  -->
        <Viewbox Margin="20" Stretch="Uniform">
            <Grid Width="600" Height="300">
                <!--  粒子画布  -->
                <Canvas
                    x:Name="ParticleCanvas"
                    Width="600"
                    Height="300" />

                <!--  数字时间显示  -->
                <TextBlock
                    x:Name="TimeDisplay"
                    Margin="0,0,0,10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    FontSize="24"
                    Foreground="{DynamicResource Text.Primary.Brush}"
                    Opacity="0.7" />
            </Grid>
        </Viewbox>
    </Grid>
</Page>
